%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }

    %title Single Malt

    = stylesheet_link_tag 'application'
    = javascript_include_tag 'vendor/modernizr'
    = csrf_meta_tags

  %body{ class: page_class }
    %section{ role: 'main' }
      .row
        .large-3.columns
          .sidebar
            %h3 Philip Duffy
            %h6.subheader
              All opinions on this page are strictly plagiarized.

            %ul.side-nav
              %li= link_to 'Awesome Things', things_path
              %li= link_to 'Past Experiences', experiences_path

              - if signed_in?
                %li= link_to 'New Thing', new_manage_thing_path
                %li= link_to 'New Experience', new_manage_experience_path
                %li= link_to 'Sign Out', destroy_user_session_path, method: :delete

          .image-container
            = link_to 'http://www.twitter.com/willmanduffy' do
              = image_tag 'icons/twitter.png'

            = link_to 'http://www.github.com/philduffy' do
              = image_tag 'icons/github.png'

            = link_to 'http://www.rdio.com/people/elementus/' do
              = image_tag 'icons/rdio.png'



        .large-9.columns.main-container
          = yield

    = javascript_include_tag 'application'
